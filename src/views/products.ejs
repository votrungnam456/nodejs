<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
    <meta name="description" content="Browse and manage products in our online store">
    <meta name="theme-color" content="#667eea">
    <title>Product List - Your Store</title>
    <link rel="stylesheet" href="/assets/css/products.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <header class="header">
        <div class="container">
            <h1 class="logo">
                <i class="fas fa-shopping-bag"></i>
                Product Store
            </h1>
            <nav class="nav">
                <a href="/homepage" class="nav-link">
                    <i class="fas fa-home"></i>
                    Home
                </a>
                <a href="/profile" class="nav-link">
                    <i class="fas fa-user"></i>
                    Profile
                </a>
            </nav>
        </div>
    </header>

    <main class="main">
        <div class="container">
            <!-- Tab Navigation -->
            <section class="tab-navigation">
                <div class="tab-buttons">
                    <button id="productsTab" class="tab-btn active">
                        <i class="fas fa-shopping-bag"></i>
                        Products
                    </button>
                    <button id="importTab" class="tab-btn">
                        <i class="fas fa-file-import"></i>
                        Import JSON
                    </button>
                </div>
            </section>

            <!-- Products Tab Content -->
            <div id="productsContent" class="tab-content active">

                <!-- Loading Spinner -->
                <div id="loadingSpinner" class="loading-spinner hidden">
                    <div class="spinner"></div>
                    <p>Loading products...</p>
                </div>

                <!-- Products Table -->
                <section class="products-section">
                    <div class="products-header">
                        <h2 class="products-title">Danh sách sản phẩm</h2>
                        <div class="products-count">
                            <span id="productsCount">0</span> sản phẩm
                        </div>
                        <div class="products-actions">
                            <a href="/products/edit/new" class="btn btn-primary" id="openCreateModal">
                                <i class="fas fa-plus"></i>
                                Thêm sản phẩm
                            </a>
                        </div>
                    </div>

                    <!-- Filter Section -->
                    <section class="filter-section">
                        <div class="filter-container">
                            <div class="filter-row">
                                <div class="filter-group">
                                    <label for="nameFilter">Tên sản phẩm:</label>
                                    <input type="text" id="nameFilter" placeholder="Nhập tên sản phẩm..."
                                        class="filter-input" aria-label="Tên sản phẩm">
                                </div>

                                <div class="filter-group">
                                    <label for="statusFilter">Trạng thái:</label>
                                    <select id="statusFilter" class="filter-select" aria-label="Trạng thái">
                                        <option value="">Tất cả trạng thái</option>
                                        <option value="true">Hoạt động</option>
                                        <option value="false">Không hoạt động</option>
                                    </select>
                                </div>

                                <div class="filter-group">
                                    <label for="categoryFilter">Danh mục:</label>
                                    <select id="categoryFilter" class="filter-select" aria-label="Danh mục">
                                        <option value="">Tất cả danh mục</option>
                                    </select>
                                </div>

                                <div class="filter-group">
                                    <label for="stockFilter">Tồn kho:</label>
                                    <select id="stockFilter" class="filter-select" aria-label="Tồn kho">
                                        <option value="">Tất cả</option>
                                        <option value="in-stock">Còn hàng</option>
                                        <option value="out-of-stock">Hết hàng</option>
                                        <option value="low-stock">Sắp hết hàng</option>
                                    </select>
                                </div>

                                <div class="filter-actions">
                                    <button id="clearFilters" class="filter-btn filter-btn-secondary">
                                        <i class="fas fa-times"></i>
                                        Xóa bộ lọc
                                    </button>
                                </div>
                            </div>
                        </div>
                    </section>

                    <div class="table-container">
                        <table id="productsTable" class="products-table">
                            <thead>
                                <tr>
                                    <th>Hình ảnh</th>
                                    <th class="sortable" data-sort="title">
                                        Tiêu đề
                                        <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th class="sortable" data-sort="category">
                                        Danh mục
                                        <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th class="sortable" data-sort="active">
                                        Trạng thái
                                        <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th class="sortable" data-sort="stock">
                                        Tồn kho
                                        <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th class="sortable" data-sort="description">
                                        Mô tả
                                        <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th class="sortable active" data-sort="createdAt">
                                        Ngày tạo
                                        <i class="fas fa-sort-down sort-icon"></i>
                                    </th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="productsTableBody">
                                <!-- Products will be loaded here dynamically -->
                            </tbody>
                        </table>
                    </div>

                    <!-- No Products Message -->
                    <div id="noProducts" class="no-products hidden">
                        <i class="fas fa-box-open"></i>
                        <h3>Không có sản phẩm nào</h3>
                        <p>Chưa có sản phẩm nào trong hệ thống</p>
                    </div>
                </section>

                <!-- Pagination -->
                <section class="pagination-section">
                    <div id="pagination" class="pagination hidden">
                        <button id="prevPage" class="pagination-btn">
                            <i class="fas fa-chevron-left"></i>
                            Previous
                        </button>

                        <div class="page-numbers">
                            <span id="pageInfo">Page 1 of 1</span>
                        </div>

                        <div class="pagination-controls">
                            <label for="pageInput">Page</label>
                            <input id="pageInput" type="number" min="1" value="1" class="pagination-input"
                                aria-label="Page" />
                        </div>

                        <button id="nextPage" class="pagination-btn">
                            Next
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                    <div class="pagination-topbar">
                        <div class="limit-controls">
                            <label for="limitSelect">per page</label>
                            <select id="limitSelect" class="limit-select" aria-label="Items per page">
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                            </select>
                        </div>
                    </div>
                </section>
            </div>

            <!-- Import Tab Content -->
            <div id="importContent" class="tab-content">
                <!-- Import Section -->
                <section class="import-section">
                    <div class="import-header">
                        <h2 class="import-title">
                            <i class="fas fa-upload"></i>
                            Import JSON Data
                        </h2>
                        <p class="import-description">
                            Upload a JSON file to import data. Supported formats: products, users, or any structured
                            JSON data.
                        </p>
                    </div>

                    <div class="import-container">
                        <!-- File Upload Area -->
                        <div class="upload-area" id="uploadArea">
                            <div class="upload-content">
                                <i class="fas fa-cloud-upload-alt upload-icon"></i>
                                <h3>Drag & Drop your JSON file here</h3>
                                <p>or</p>
                                <label for="fileInput" class="upload-btn">
                                    <i class="fas fa-folder-open"></i>
                                    Choose File
                                </label>
                                <input type="file" id="fileInput" accept=".json" class="file-input">
                                <p class="file-info">Maximum file size: 10MB</p>
                            </div>
                        </div>

                        <!-- File Preview -->
                        <div id="filePreview" class="file-preview hidden">
                            <div class="preview-header">
                                <h3>File Preview</h3>
                                <button id="removeFile" class="remove-btn">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="preview-content">
                                <div class="file-info-display">
                                    <span id="fileName"></span>
                                    <span id="fileSize"></span>
                                </div>
                                <div class="json-preview">
                                    <pre id="jsonContent"></pre>
                                </div>
                            </div>
                        </div>

                        <!-- Import Options -->
                        <div class="import-options">
                            <h3>Import Options</h3>
                            <div class="options-grid">
                                <div class="option-group">
                                    <label for="dataType" class="option-label">Data Type:</label>
                                    <select id="dataType" class="option-select">
                                        <option value="products">Products</option>
                                        <option value="categories">Categories</option>
                                    </select>
                                </div>

                                <div class="option-group">
                                    <label for="importMode" class="option-label">Import Mode:</label>
                                    <select id="importMode" class="option-select">
                                        <option value="append">Append (Add new items)</option>
                                        <option value="replace">Replace (Clear existing)</option>
                                        <option value="update">Update (Merge existing)</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="action-buttons">
                            <button id="importBtn" class="btn btn-primary" disabled>
                                <i class="fas fa-upload"></i>
                                Import Data
                            </button>
                            <button id="previewBtn" class="btn btn-secondary" disabled>
                                <i class="fas fa-eye"></i>
                                Preview Import
                            </button>
                            <button id="clearBtn" class="btn btn-outline">
                                <i class="fas fa-trash"></i>
                                Clear All
                            </button>
                        </div>
                    </div>
                </section>

                <!-- Results Section -->
                <section id="resultsSection" class="results-section hidden">
                    <div class="results-header">
                        <h3>Import Results</h3>
                        <button id="closeResults" class="close-btn">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div id="resultsContent" class="results-content">
                        <!-- Results will be displayed here -->
                    </div>
                </section>

                <!-- Import History -->
                <section id="historySection" class="results-section">
                    <div class="results-header">
                        <h3>Import History</h3>
                        <button id="refreshHistory" class="btn btn-secondary refresh-history-btn">
                            <i class="fas fa-rotate"></i>
                            Refresh
                        </button>
                    </div>
                    <div class="results-content">
                        <table class="products-table">
                            <thead>
                                <tr>
                                    <th>Tên file</th>
                                    <th>Kích thước</th>
                                    <th>Tổng bản ghi</th>
                                    <th>Thành công</th>
                                    <th>Thất bại</th>
                                    <th>Tình trạng</th>
                                    <th>Thời gian</th>
                                </tr>
                            </thead>
                            <tbody id="importHistoryBody">
                                <!-- Rows injected by JS -->
                            </tbody>
                        </table>
                    </div>
                </section>

                <!-- Loading Overlay -->
                <div id="loadingOverlay" class="loading-overlay hidden">
                    <div class="loading-content">
                        <div class="spinner"></div>
                        <h3>Processing Import...</h3>
                        <p id="loadingMessage">Please wait while we process your data</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Product Modal -->
    <div id="productModal" class="modal hidden">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <div id="modalContent">
                <!-- Modal content will be loaded here -->
            </div>
        </div>
    </div>


    <!-- Error Modal -->
    <div id="errorModal" class="modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Import Error</h3>
                <button class="close-modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="errorContent"></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="importManager.closeErrorModal()">OK</button>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Product Store. All rights reserved.</p>
        </div>
    </footer>

    <script>
        window.BASE_API_URL = '<%= BASE_API_URL %>';
    </script>
    <script src="/assets/js/api.js"></script>
    <script src="/assets/js/products.js"></script>
    <script src="/assets/js/import.js"></script>
</body>

</html>