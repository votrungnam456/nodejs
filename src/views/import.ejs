<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JSON Import - Your Store</title>
    <link rel="stylesheet" href="/assets/css/import.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1 class="logo">
                <i class="fas fa-file-import"></i>
                JSON Import Tool
            </h1>
            <nav class="nav">
                <a href="/homepage" class="nav-link">
                    <i class="fas fa-home"></i>
                    Home
                </a>
                <a href="/products" class="nav-link">
                    <i class="fas fa-shopping-bag"></i>
                    Products
                </a>
                <a href="/profile" class="nav-link">
                    <i class="fas fa-user"></i>
                    Profile
                </a>
            </nav>
        </div>
    </header>

    <main class="main">
        <div class="container">
            <!-- Import Section -->
            <section class="import-section">
                <div class="import-header">
                    <h2 class="import-title">
                        <i class="fas fa-upload"></i>
                        Import JSON Data
                    </h2>
                    <p class="import-description">
                        Upload a JSON file to import data. Supported formats: products, users, or any structured JSON data.
                    </p>
                </div>

                <div class="import-container">
                    <!-- File Upload Area -->
                    <div class="upload-area" id="uploadArea">
                        <div class="upload-content">
                            <i class="fas fa-cloud-upload-alt upload-icon"></i>
                            <h3>Drag & Drop your JSON file here</h3>
                            <p>or</p>
                            <label for="fileInput" class="upload-btn">
                                <i class="fas fa-folder-open"></i>
                                Choose File
                            </label>
                            <input type="file" id="fileInput" accept=".json" class="file-input">
                            <p class="file-info">Maximum file size: 10MB</p>
                        </div>
                    </div>

                    <!-- File Preview -->
                    <div id="filePreview" class="file-preview hidden">
                        <div class="preview-header">
                            <h3>File Preview</h3>
                            <button id="removeFile" class="remove-btn">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="preview-content">
                            <div class="file-info-display">
                                <span id="fileName"></span>
                                <span id="fileSize"></span>
                            </div>
                            <div class="json-preview">
                                <pre id="jsonContent"></pre>
                            </div>
                        </div>
                    </div>

                    <!-- Import Options -->
                    <div class="import-options">
                        <h3>Import Options</h3>
                        <div class="options-grid">
                            <div class="option-group">
                                <label for="dataType" class="option-label">Data Type:</label>
                                <select id="dataType" class="option-select">
                                    <option value="auto">Auto Detect</option>
                                    <option value="products">Products</option>
                                    <option value="users">Users</option>
                                    <option value="custom">Custom</option>
                                </select>
                            </div>

                            <div class="option-group">
                                <label for="importMode" class="option-label">Import Mode:</label>
                                <select id="importMode" class="option-select">
                                    <option value="append">Append (Add new items)</option>
                                    <option value="replace">Replace (Clear existing)</option>
                                    <option value="update">Update (Merge existing)</option>
                                </select>
                            </div>

                            <div class="option-group">
                                <label class="option-label">Validation:</label>
                                <div class="checkbox-group">
                                    <label class="checkbox-label">
                                        <input type="checkbox" id="validateData" checked>
                                        <span class="checkmark"></span>
                                        Validate data structure
                                    </label>
                                    <label class="checkbox-label">
                                        <input type="checkbox" id="skipDuplicates" checked>
                                        <span class="checkmark"></span>
                                        Skip duplicates
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <button id="importBtn" class="btn btn-primary" disabled>
                            <i class="fas fa-upload"></i>
                            Import Data
                        </button>
                        <button id="previewBtn" class="btn btn-secondary" disabled>
                            <i class="fas fa-eye"></i>
                            Preview Import
                        </button>
                        <button id="clearBtn" class="btn btn-outline">
                            <i class="fas fa-trash"></i>
                            Clear All
                        </button>
                    </div>
                </div>
            </section>

            <!-- Results Section -->
            <section id="resultsSection" class="results-section hidden">
                <div class="results-header">
                    <h3>Import Results</h3>
                    <button id="closeResults" class="close-btn">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div id="resultsContent" class="results-content">
                    <!-- Results will be displayed here -->
                </div>
            </section>

            <!-- Loading Overlay -->
            <div id="loadingOverlay" class="loading-overlay hidden">
                <div class="loading-content">
                    <div class="spinner"></div>
                    <h3>Processing Import...</h3>
                    <p id="loadingMessage">Please wait while we process your data</p>
                </div>
            </div>
        </div>
    </main>

    <!-- Error Modal -->
    <div id="errorModal" class="modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Import Error</h3>
                <button class="close-modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="errorContent"></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="importManager.closeErrorModal()">OK</button>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 JSON Import Tool. All rights reserved.</p>
        </div>
    </footer>
    <script>
        window.BASE_API_URL = <%- JSON.stringify(BASE_API_URL) %>;
    </script>
    <script src="/assets/js/import.js"></script>
</body>
</html> 